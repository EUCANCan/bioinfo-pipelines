Bootstrap: docker
From: conda/miniconda3-centos7

%labels
    gitUrl ssh://git@gitlab.curie.fr:2222/data-analysis/nf-vegan.git
    gitCommit 55eeec64de086dcf1f76c24b7fda1e235365c886 / devel

%environment
    PATH=/usr/local/envs/python_env/bin:$PATH
    LC_ALL=en_US.utf-8
    LANG=en_US.utf-8

%post
    yum install -y which   \
    && yum clean all \
    && conda create -y -n python_env  \
&& conda install -y -c conda-forge -n python_env python=3.8.5 \
    && echo "source activate python_env" > ~/.bashrc \
    && conda clean -a

